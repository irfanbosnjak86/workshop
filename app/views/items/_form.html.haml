= form_for(item, html: {class: "form-horizontal"}) do |f|
  - if item.errors.any?
    #error_explanation
      %h2
        = pluralize(item.errors.count, "error")
        prohibited this item from being saved:
      %ul
        - item.errors.full_messages.each do |message|
          %li= message
  
  .form-group
    = f.label :name, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :name, class: "form-control"
  .form-group
    = f.label :status, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :status, class: "form-control"
  .form-group
    = f.label :received_date, class: "col-sm-2 control-label"
    .col-sm-10
      = f.datetime_select :received_date, class: "form-control"

  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: "btn btn-success"
      = link_to 'Back', items_path, class: "btn btn-default"
